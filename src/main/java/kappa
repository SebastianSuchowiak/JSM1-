if (task.getWorkToDo() == task.getWorkDone()) {
            System.out.println("Task " + task.getTaskName() + " status: Executed");
            return 1;
        } else if (task.getWorkToDo() > 0) {
            System.out.println("Task " + task.getTaskName() + " status: " + task.getWorkDone() +
                    " out of " + task.getWorkToDo() + " \"work units\"  executed");
            return 0;
        } else {
            System.out.println("This employee has not been assigned with any task");
            return -1;
        }